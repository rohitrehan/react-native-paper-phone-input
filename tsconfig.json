{
  "extends": "expo/tsconfig.base",
  "include": ["src", "typings.d.ts"],
  "compilerOptions": {
    "outDir": "./lib",
    "module": "ES6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "sourceMap": true,
    "strict": true,
    "removeComments": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "scripts",
    "babel.config.js",
    "eslint.config.mjs"
  ]
}
